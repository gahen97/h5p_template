tr(id="row" + index,data-index=index)
  td
    -if (typeof(addElem) !== 'undefined'){
      | add(
      div(style="border:2px solid DarkTurquoise; width:17px; height:17px; display:inline-block; margin-left:2px; margin-right:2px; text-align:center")
        div(id="new" + index, class="element newItem pointer")= addElem
      | );
    -} else if (typeof(removeElem) !== 'undefined'){
      | remove(
      div(id="new" + index, class="element newItem")= removeElem
      | );
    -}
  td
    .textin
      img.droppable(src='img/trash.jpg', height='15', width='15')
      ul(id="set" + index, class="textin items")
    a#check.button(href='nojavascript.html', onclick='btnClick(this); return false') Check
    a#reset.button(href='nojavascript.html', onclick='resetBtn(this); return false') Reset
    p
      span(id="check" + index, class="checkmark")
      span#c.hidden= answer
